rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Users Collection ---
    // Users can only read and update their own profile.
    // They cannot create or delete their own user document directly.
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Creation is handled by a server-side function when a user first signs up.
      // Deletion is not allowed to preserve data integrity.
    }
    
    // --- Projects Collection ---
    // Users can read/update projects they are a participant in.
    // Any authenticated user can create a new project.
    // Only the project owner (or maybe admins in the future) can delete.
    match /projects/{projectId} {
       allow read, update: if request.auth != null && request.auth.token.email in resource.data.participantsEmails;
       allow create: if request.auth != null;
       allow delete: if request.auth != null && request.auth.token.email == resource.data.ownerEmail;
    }
    
    // --- Suppliers Collection ---
    // Suppliers are private to the user who created them.
    match /suppliers/{supplierId} {
      // Allow read, update, and delete only if the document's ownerId matches the user's uid.
      allow read, update, delete: if request.auth != null && resource.data.ownerId == request.auth.uid;
      
      // Allow creation only if the new document's ownerId is the user's uid.
      allow create: if request.auth != null && request.resource.data.ownerId == request.auth.uid;
    }
  }
}
