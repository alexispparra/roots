
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Users Collection Rules ---
    match /users/{userId} {
      // --- DEBUGGING RULE (TEMPORARY & INSECURE) ---
      // This rule allows ANY authenticated user to see the list of all other users.
      // It is intended ONLY to diagnose the root cause of the permission error.
      allow list: if request.auth != null;

      // Rules for individual document access remain more secure.
      // An admin or the user themselves can get/update a document.
      allow get, update: if request.auth.uid == userId || request.auth.token.email == 'alexispparra@gmail.com';

      // A user can only create their own document.
      allow create: if request.auth.uid == userId;
    }

    // --- Projects Collection Rules ---
    match /projects/{projectId} {
      allow read, write: if request.auth != null && request.auth.token.email in resource.data.participantsEmails;
    }
  }
}
