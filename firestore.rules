
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Reglas para perfiles de usuario
    match /users/{userId} {
      // Un usuario solo puede leer y actualizar su propio perfil.
      allow read, update: if request.auth.uid == userId;
      // Un usuario solo puede crear su propio perfil.
      allow create: if request.auth.uid == userId;
    }

    // Reglas para proyectos
    match /projects/{projectId} {
      // Cualquiera que haya iniciado sesión puede pedir la lista de proyectos.
      // La aplicación se encargará de filtrar y mostrar solo los que le corresponden.
      allow list: if request.auth != null;
      
      // Un usuario solo puede leer, actualizar o borrar un proyecto si su email
      // está en la lista de `participantsEmails` de ese proyecto.
      allow read, update, delete: if request.auth.uid != null 
                                  && request.auth.token.email in resource.data.participantsEmails;
      
      // Cualquier usuario que haya iniciado sesión puede crear un proyecto nuevo.
      allow create: if request.auth.uid != null;
    }
  }
}
