
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      // Un usuario puede crear su propio perfil.
      allow create: if request.auth.uid == userId;
      
      // Un usuario puede leer y ACTUALIZAR su propio perfil.
      // Esta es la regla que faltaba y que soluciona el problema de raíz.
      allow read, update: if request.auth.uid == userId;
      
      // Un administrador puede leer el perfil de cualquier usuario (para el futuro panel de administración).
      allow get: if get(/databases/$(database)/documents/users/$(request.auth.uid)).data.status == 'approved';
    }

    match /projects/{projectId} {
      // Un usuario debe estar autenticado para listar proyectos.
      // La consulta en la aplicación se encarga de filtrar solo los que le pertenecen.
      allow list: if request.auth != null;

      // Cualquier participante del proyecto puede leerlo.
      allow read: if request.auth != null && request.auth.token.email in resource.data.participantsEmails;
      
      // Un usuario autenticado puede crear un proyecto nuevo (se convierte en el propietario).
      allow create: if request.auth != null;

      // Solo los administradores o editores del proyecto pueden modificarlo o eliminarlo.
      allow update, delete: if request.auth != null && resource.data.participants[?request.auth.token.email == p.email && (p.role == 'admin' || p.role == 'editor')].size() > 0;
    }
  }
}
