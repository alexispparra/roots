rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // --- Rules for the 'users' collection ---
    match /users/{userId} {
      // ANY authenticated user can CREATE their own profile document.
      allow create: if request.auth != null && request.resource.id == request.auth.uid;

      // A user can GET and UPDATE their OWN document.
      allow get, update: if request.auth.uid == userId;

      // The ADMIN can LIST the entire collection. This is the key fix.
      allow list: if request.auth.token.email == 'alexispparra@gmail.com';
      
      // The ADMIN can also GET and UPDATE any user document.
      allow get, update: if request.auth.token.email == 'alexispparra@gmail.com';
    }

    // --- Rules for the 'projects' collection ---
    match /projects/{projectId} {
      // Any authenticated user can create a project. The rules in the context ensure they become the owner.
      allow create: if request.auth != null;

      // Only users listed in the project's 'participantsEmails' array can read or write to it.
      allow read, write: if request.auth.token.email in resource.data.participantsEmails;
    }
  }
}
